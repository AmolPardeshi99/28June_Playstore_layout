<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/RLctionbar"
        android:layout_width="match_parent"
        android:background="#079527"
        android:paddingTop="10sp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_back_button"/>

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginRight="10sp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Vheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RLctionbar"
        android:background="#079527"
        android:gravity="center"
        android:padding="35sp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:src="@drawable/ic_carbon_play_outline"
            android:contentDescription="@string/app_name" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/Vheader"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_height="match_parent">
        <View
            android:id="@+id/squareBox"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#079527"/>
        <View
            android:id="@+id/rectangle1"
            android:layout_width="120sp"
            android:layout_height="20sp"
            android:background="#C4C4C4"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="25sp"
            android:layout_toRightOf="@id/squareBox"/>

        <View
            android:id="@+id/rectangle2"
            android:layout_width="90sp"
            android:layout_height="15sp"
            android:background="#C4C4C4"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="25sp"
            android:layout_below="@id/rectangle1"
            android:layout_toRightOf="@id/squareBox"/>

        <View
            android:id="@+id/rectangle3"
            android:layout_width="45sp"
            android:layout_height="11sp"
            android:background="#C4C4C4"
            android:layout_marginTop="15sp"
            android:layout_below="@id/rectangle2"
            android:layout_marginLeft="25sp"
            android:layout_toRightOf="@id/squareBox"/>

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_bi_bookmarks"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15sp"
            />


        <LinearLayout
            android:id="@+id/boxOfBtns"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/squareBox"
            android:weightSum="2"
            android:layout_marginTop="40sp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnTryNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#079527"
                android:background="@drawable/rectangle"
                android:text="Try Now"
                />

            <Button
                android:id="@+id/btnInstall"
                android:layout_width="0dp"
                android:layout_height="57sp"
                android:layout_weight="1"
                android:text="Install"
                android:backgroundTint="#079527"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
        </LinearLayout>



        <View
            android:id="@+id/vCircle1"
            android:layout_width="90sp"
            android:layout_height="85sp"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/circle"
            android:layout_below="@id/boxOfBtns"/>

        <View
            android:id="@+id/vCircle2"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/vCircle1"
            android:background="@drawable/circle"
            android:layout_below="@id/boxOfBtns"/>

        <View
            android:id="@+id/vCircle3"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/vCircle2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle"
            android:layout_below="@id/boxOfBtns"/>

        <View
            android:id="@+id/vfooterRectangle1"
            android:layout_width="318sp"
            android:layout_height="40sp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20sp"
            android:layout_above="@+id/vfooterRectangle2"
            android:background="#C4C4C4"
            />

        <View
            android:id="@+id/vfooterRectangle2"
            android:layout_width="278sp"
            android:layout_height="24sp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:background="#C4C4C4"
            android:layout_marginBottom="10sp"
            />
    </RelativeLayout>


</RelativeLayout>